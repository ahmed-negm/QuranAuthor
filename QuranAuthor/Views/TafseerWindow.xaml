<Window x:Class="QuranAuthor.Views.TafseerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tafseer" WindowState="Maximized" FontSize="14">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button Click="NewSnippet_Click" Width="60" Margin="0,0,10,0">New</Button>
                <Button Command="{Binding Path=DeleteCommand}" Width="60" Margin="0,0,10,0">Delete</Button>
                <Button Command="{Binding Path=UpCommand}" Width="60" Margin="0,0,10,0">Up</Button>
                <Button Command="{Binding Path=DownCommand}" Width="60" Margin="0,0,10,0">Down</Button>
            </StackPanel>
            <ComboBox ItemsSource="{Binding Path=Chapters}" DisplayMemberPath="Name" SelectedItem="{Binding Path=Chapter}" HorizontalAlignment="Right" Width="200" />
            <ListBox ItemsSource="{Binding Path=Snippets}" SelectedItem="{Binding Path=Snippet}" Grid.Row="1" Margin="0,10,0,0" />
        </Grid>
        
        <Image x:Name="imgPage" Grid.Column="1" />
        
    </Grid>
</Window>