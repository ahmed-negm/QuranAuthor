<UserControl x:Class="QuranAuthor.Controls.Numeric"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" FontFamily="Tahoma">
    <StackPanel Orientation="Horizontal" >
        <TextBox x:Name="txtPoint" FontSize="22" TextChanged="txtPoint_TextChanged" PreviewKeyDown="txtPoint_KeyDown" PreviewTextInput="txtPoint_PreviewTextInput"  Text="0" TextAlignment="Center" Width="100" Height="35" />
        <StackPanel Orientation="Vertical" Height="32" VerticalAlignment="Center">
            <Button x:Name="cmdUp" Content="˄" Width="30" FontSize="10" Click="cmdUp_Click"/>
            <Button x:Name="cmdDown" Content="˅" Width="30" FontSize="10" Click="cmdDown_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>